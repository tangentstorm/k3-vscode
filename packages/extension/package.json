{
    "name": "vscode-k3-vscode",
    "description": "The extension specific package",
    "version": "0.0.1",
    "displayName": "k3-vscode",
    "type": "module",
    "repository": {
        "url": "https://github.com/tangentstorm/k3-vscode"
    },
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "k3",
            "aliases": [ "k3" ],
            "extensions": [ ".k" ],
            "configuration": "./language-configuration.json" } ],
        "grammars": [{
            "language": "k3",
            "scopeName": "source.k3",
            "path": "syntaxes/k3.tmLanguage.json" }]},
    "activationEvents": [ "onLanguage:k3" ],
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "npm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/k3.tmLanguage.json ./syntaxes/k3.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\""
    },
    "dependencies": {
        "k3-language": "0.0.1",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "~1.67.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.25.5"
    },
    "vsce": {
        "dependencies": false
    }
}
